<Window x:Class="BrandonScott.RazerNotes.Windows.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditWindow" Height="480" Width="800" FontFamily="../Resources/#Razer Header Regular" Background="Black" Foreground="#FF17E43C" WindowStartupLocation="Manual" ShowInTaskbar="False" ResizeMode="NoResize" Left="99999" Top="99999" ShowActivated="False" WindowStyle="ToolWindow">
	<Grid>
		<TextBlock HorizontalAlignment="Left" Margin="24,22,0,0" TextWrapping="Wrap" Text="Razer Notes" VerticalAlignment="Top" Height="51" Width="267" FontFamily="../Resources/#Razer Header Light" FontSize="36"/>
		<TextBox x:Name="NoteTitleBox" HorizontalAlignment="Left" Height="40" Margin="316,33,0,0" TextWrapping="Wrap" Text="$(Note.Title)" VerticalAlignment="Top" Width="454" Foreground="#FF17E43C" Background="#FF020000" BorderBrush="#FF17E43C" FontSize="24" BorderThickness="2" Padding="4,0,0,0" SelectionBrush="White" MaxLength="32"/>
		<TextBox x:Name="NoteContentBox" HorizontalAlignment="Left" Height="317" Margin="24,90,0,0" TextWrapping="Wrap" Text="$(Note.Content)" VerticalAlignment="Top" Width="746" Foreground="#FF17E43C" Background="#FF000201" FontSize="24" BorderBrush="#FF17E43C" BorderThickness="2" Padding="4,0,0,0" SelectionBrush="White" MaxLength="450"/>
	</Grid>
</Window>
